---
// --- BLOQUE DEL SERVIDOR (FRONTMATTER) ---

// 1. Importa el componente que vas a usar.
import PokedexGrid from "../components/PokedexGrid.astro";

// 2. Realiza la llamada a la API y declara la variable 'allPokemons'.
//    Esta es la parte que probablemente te falta o está en el lugar incorrecto.
const response = await fetch("https://pokeapi.co/api/v2/pokemon?limit=1025");
const data = await response.json();
const allPokemons = data.results;
// Al estar aquí, 'allPokemons' está disponible para el HTML de abajo.
---

<!-- --- PLANTILLA HTML --- -->
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Mi Pokédex</title>
    <style is:global>
      /* Estilos globales */
      body {
        font-family: sans-serif;
        background-image: url("/forest.jpg");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        background-repeat: no-repeat;
        color: white;
        margin: 0;
        padding: 1rem;
        min-height: 100vh;
      }

      /* Overlay para mejorar la legibilidad */
      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.4);
        z-index: -1;
      }
      h1 {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        color: #ffffff;
        margin: 1.5rem 0;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        letter-spacing: 1px;
        position: relative;
        text-shadow: 0 2px 10px rgba(255, 204, 0, 0.3);
      }

      h1::after {
        content: "";
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, #ffcc00, #ff6b35);
        border-radius: 2px;
      }
    </style>
  </head>
  <body>
    <h1>Mi Pokédex</h1>

    <!-- Ahora 'allPokemons' SÍ existe y se puede pasar como prop -->
    <PokedexGrid allPokemons={allPokemons} />
  </body>
</html>
